{
  "name": "craft-and-local",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Gethyn Jones",
  "license": "MIT",
  "engines": {
    "node": "7.7.4",
    "yarn": "0.24.6"
  },
  "scripts": {
    "start": "yarn start:dev",
    "start:dev": "NODE_ENV=development webpack-dev-server --progress",
    "start:json": "./node_modules/.bin/json-server --watch ./src/data/db.json",
    "prod:build": "rimraf lib dist && babel src -d lib --ignore .test.js && cross-env NODE_ENV=production webpack -p --progress && cp _redirects dist/",
    "lint": "eslint src --ext .js,.jsx",
    "test": "yarn lint && flow && jest --coverage",
    "test:watch": "jest --watch",
    "precommit": "yarn test",
    "prepush": "yarn test"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss)$": "identity-obj-proxy"
    },
    "automock": false,
    "setupFiles": [
      "./setupJest.js"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-flow-react-proptypes": "^3.3.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "cross-env": "^5.0.1",
    "css-loader": "^0.28.4",
    "eslint": "^3.19.0-1",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-compat": "^1.0.3",
    "eslint-plugin-flowtype": "^2.34.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.1.0",
    "fetch-mock": "^5.11.0",
    "flow-bin": "^0.48.0",
    "html-webpack-plugin": "^2.28.0",
    "husky": "^0.14.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^20.0.4",
    "jest-fetch-mock": "^1.2.1",
    "json-server": "^0.10.1",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.6",
    "react-test-renderer": "^15.6.1",
    "redux-mock-store": "^1.2.3",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "svg-sprite-loader": "^3.0.5",
    "svgo": "^0.7.2",
    "svgo-loader": "^1.2.1",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "enzyme": "^2.9.1",
    "normalize.css": "^7.0.0",
    "react": "^15.6.1",
    "react-async-script-loader": "^0.3.0",
    "react-dom": "^15.6.1",
    "react-ga": "^2.2.0",
    "react-helmet": "^5.1.3",
    "react-hot-loader": "next",
    "react-redux": "^5.0.5",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "sass-mq": "^3.3.2",
    "shortid": "^2.2.8",
    "whatwg-fetch": "^2.0.3",
    "yarn": "^0.24.5"
  }
}
